<!-- views/senha.ejs -->
<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Recuperar ou Redefinir Senha | Lu Doces</title>
  <link rel="stylesheet" href="/css/style.css" />
<style>
  body {
    font-family: 'Poppins', sans-serif;
    background-color: #fff0f6; /* fundo suave rosa claro */
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    margin: 0;
  }

  .container {
    background: #ffe6f0; /* card rosa claro */
    border-radius: 25px;
    box-shadow: 0 8px 20px rgba(255, 130, 180, 0.2);
    padding: 32px 40px;
    width: 100%;
    max-width: 400px;
    text-align: center;
  }

  h2 {
    color: #e35b8f; /* lilás/rosa forte */
    margin-bottom: 16px;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  label {
    text-align: left;
    font-weight: 500;
    color: #c2185b; /* tom de rosa escuro */
  }

  input {
    padding: 12px;
    border: 1px solid #ffc0dd; /* rosa claro */
    border-radius: 15px;
    font-size: 15px;
    outline: none;
    background: #fff0f6; /* combinando com o card */
    transition: all 0.2s;
  }

  input:focus {
    border-color: #e35b8f;
    box-shadow: 0 0 6px rgba(227, 91, 143, 0.4);
  }

  button {
    background: linear-gradient(135deg, #e35b8f, #ff80ab);
    color: #fff;
    border: none;
    padding: 12px;
    border-radius: 20px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
  }

  button:hover {
    background: linear-gradient(135deg, #ff99bb, #f06292);
    transform: translateY(-2px);
    box-shadow: 0 6px 15px rgba(255, 120, 180, 0.3);
  }

  .mensagem {
    margin: 8px 0;
    color: #c2185b;
    font-weight: 500;
  }

  a {
    color: #e35b8f;
    text-decoration: none;
    transition: 0.2s;
  }

  a:hover {
    text-decoration: underline;
    color: #ff80ab;
  }
</style>

</head>
<body>
  <div class="container">
    <h2>Recuperação de Senha</h2>

    <% if (mensagem) { %>
      <p class="mensagem"><%= mensagem %></p>
    <% } %>

    <% if (!token) { %>
      <!-- Etapa 1: Solicitar e-mail -->
      <form action="/esqueceu-senha" method="POST">
        <label for="email">Digite seu e-mail cadastrado:</label>
        <input type="email" id="email" name="email" placeholder="exemplo@email.com" required />
        <button type="submit">Enviar link de recuperação</button>
      </form>
    <% } else { %>
      <!-- Etapa 2: Redefinir senha -->
      <form action="/reset/<%= token %>" method="POST">
        <label for="senha">Nova senha:</label>
        <input type="password" id="senha" name="senha" placeholder="Digite a nova senha" required minlength="6" />
        <label for="confirma">Confirme a nova senha:</label>
        <input type="password" id="confirma" name="confirma" placeholder="Confirme sua nova senha" required minlength="6" />
        <button type="submit">Salvar nova senha</button>
      </form>
    <% } %>

    <p style="margin-top:16px;">
      <a href="/login">← Voltar ao login</a>
    </p>
  </div>
</body>
</html>
