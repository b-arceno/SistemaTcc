<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Detalhes do Pedido #<%= pedido.id %></title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <%- include('../partials/header') %>

  <main>
    <section class="detalhes-container">
      <h1>Detalhes do Pedido #<%= pedido.id %></h1>

      <% if (mensagem) { %>
        <div class="alert"><%= mensagem %></div>
      <% } %>

      <div class="pedido-info">
        <span><strong>Data:</strong> <%= new Date(pedido.data).toLocaleDateString() %></span>
        <span><strong>Status:</strong>
          <span class="pedido-status <%= pedido.status.replace(' ', '\\ ') %>">
            <% if (pedido.status === 'pendente') { %>Pendente
            <% } else if (pedido.status === 'em preparo') { %>Em preparo
            <% } else if (pedido.status === 'finalizado') { %>Finalizado
            <% } else if (pedido.status === 'a caminho') { %>A caminho
            <% } else if (pedido.status === 'entregue') { %>Entregue
            <% } else if (pedido.status === 'cancelado') { %>Cancelado <% } %>
          </span>
        </span>
      </div>

      <% if (itens && itens.length > 0) { %>
        <table class="tabela-padrao">
          <thead>
            <tr>
              <th>Produto</th>
              <th>Quantidade</th>
              <th>Preço Unitário</th>
              <th>Subtotal</th>
            </tr>
          </thead>
          <tbody>
            <% itens.forEach(item => { %>
              <tr>
                <td><%= item.produto_nome %></td>
                <td><%= item.quantidade %></td>
                <td>R$ <%= Number(item.preco_unitario || 0).toFixed(2) %></td>
                <td>R$ <%= (item.quantidade * (item.preco_unitario || 0)).toFixed(2) %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>

      <p class="total-pedido">Total: R$ <%= Number(pedido.total || 0).toFixed(2) %></p>

      <a href="/loja/pedidos" class="btn-voltar">⬅ Voltar para Meus Pedidos</a>
    </section>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
