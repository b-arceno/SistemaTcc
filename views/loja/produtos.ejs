<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Produtos</title>
  <link rel="stylesheet" href="/css/style.css" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
  <style>
    /* ================== PRODUTOS ================== */
.page-title {
  text-align: center;
  font-size: 2.2rem;
  color: #d9155c;
  margin: 2.5rem 0;
  font-weight: 700;
}

.grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 2.5rem;
  padding: 0 2rem 4rem 2rem;
  justify-items: center;
}

/* Card do produto (mesmo estilo das categorias) */
.categoria-card {
  width: 100%;
  max-width: 220px;
  height: 180px;
  background: #ffc0cb; /* rosa meigo */
  border-radius: 30px;
  display: flex;
  flex-direction: column;
  justify-content: center; /* centraliza verticalmente */
  align-items: center;
  padding: 1rem;
  box-shadow: 0 8px 20px rgba(217, 21, 92, 0.2);
  transition: transform 0.3s, box-shadow 0.3s;
  position: relative;
  overflow: hidden;
  text-align: center;
}

.categoria-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 14px 30px rgba(217, 21, 92, 0.25);
}

/* ================== INFORMAÇÕES INTERNAS ================== */
.categoria-card h2 {
  color: #d9155c;       /* rosa escuro, chamativo */
  font-size: 1.1rem;    /* menor e harmonioso */
  font-weight: 600;
  margin-bottom: 0.3rem; 
}

.categoria-card .price {
  color: #000;           /* preço em preto para chamar atenção */
  font-weight: 600;
  font-size: 0.95rem;    
  margin-bottom: 0.5rem; 
}

.categoria-card .btn {
  font-size: 0.9rem;     
  padding: 0.5rem 1rem;  
  background-color: #e35b8f;
  color: #fff;
  border: none;
  border-radius: 25px;
  cursor: pointer;
  text-decoration: none;
  box-shadow: 0 4px 12px rgba(230, 120, 190, 0.2);
  transition: 0.3s;
}

.categoria-card .btn:hover {
  background-color: #ff80ab;
  transform: translateY(-2px);
  box-shadow: 0 6px 18px rgba(230, 120, 190, 0.3);
}

/* ================= RESPONSIVO ================= */
@media (max-width: 900px) {
  .grid {
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  }
  .categoria-card {
    height: 160px;
  }
}

@media (max-width: 600px) {
  .grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
    padding: 0 1rem;
  }
  .categoria-card {
    max-width: 100%;
    height: 150px;
  }
}
  </style>
</head>
<body>
  <%- include('../partials/header') %>

  <main class="container">
    <h1 class="page-title">Produtos</h1>

    <div class="grid">
      <% produtos.forEach(produto => { %>
        <div class="categoria-card">
          <h2><%= produto.nome %></h2>
          <p class="price">R$ <%= (produto.preco ? Number(produto.preco).toFixed(2) : '0.00') %></p>
          <a href="/loja/produtos/<%= produto.id %>" class="btn">Ver Detalhes</a>
        </div>
      <% }) %>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
