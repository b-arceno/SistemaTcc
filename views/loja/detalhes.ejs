<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title><%= produto.nome %></title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <%- include('../partials/header') %>

  <main class="container produto-detalhe">
    <div class="produto-imagem">
      <%
        let imagemPath;
        if (produto.imagem) {
          const img = String(produto.imagem);
          if (/^https?:\/\//i.test(img)) {
            imagemPath = img; // full URL
          } else if (img.startsWith('/')) {
            imagemPath = img; // already absolute path
          } else if (img.startsWith('uploads/') ) {
            imagemPath = '/' + img;
          } else {
            imagemPath = '/uploads/' + img; // filename only
          }
        } else {
          imagemPath = '/imagens/image.png';
        }
      %>
      <img src="<%= imagemPath %>" alt="<%= produto.nome %>">
    </div>

    <div class="produto-info">
      <h1><%= produto.nome %></h1>

      <div class="avaliacao">
        â˜…â˜…â˜…â˜…â˜… <span><%= (Number(produto.avaliacao) || 0).toFixed(1) %> / 5.0</span>
      </div>

      <p class="price" id="preco">R$ <%= (Number(produto.preco) || 0).toFixed(2) %></p>
      <p><%= produto.descricao %></p>

      <div class="info-extra">
        <% if (produto.peso) { %>
          <p><strong>Peso:</strong> <%= produto.peso %></p>
        <% } %>
        <% if (produto.ingredientes) { %>
          <p><strong>Ingredientes:</strong> <%= produto.ingredientes %></p>
        <% } %>
        <% if (produto.disponibilidade) { %>
          <p><strong>Disponibilidade:</strong> <%= produto.disponibilidade %></p>
        <% } %>
      </div>

      <!-- VariaÃ§Ãµes -->
      <form action="/loja/carrinho/adicionar" method="POST" class="form-variacao" style="margin-top: 1rem;">
        <input type="hidden" name="produtoId" value="<%= produto.id %>">
        <input type="hidden" name="precoSelecionado" id="precoSelecionado" value="<%= produto.preco %>">

        <% if (variacoes && variacoes.length > 0) { %>
          <label for="variacao">Escolha o tamanho/peso:</label>
          <select name="variacao_id" id="variacao" required>
            <% variacoes.forEach(v => { %>
              <option value="<%= v.id %>" data-preco="<%= Number(v.preco).toFixed(2) %>">
                <%= v.nome %> â€” R$ <%= Number(v.preco).toFixed(2) %>
              </option>
            <% }) %>
          </select>
        <% } %>

        <label>Quantidade:</label>
        <input type="number" name="quantidade" value="1" min="1" style="width: 60px; margin-left: .5rem;">
        <button type="submit" class="btn">Adicionar ao Carrinho</button>
      </form>
    </div>
  </main>

  <!-- AvaliaÃ§Ãµes -->
  <section class="avaliacoes-container">
    <h2>AvaliaÃ§Ãµes dos clientes ðŸ’¬</h2>

    <% if (avaliacoes && avaliacoes.length > 0) { %>
      <% avaliacoes.forEach(a => { %>
        <div class="avaliacao-item">
          <strong><%= a.nome_usuario %></strong> â€” <%= a.nota %> â˜…
          <p><%= a.comentario %></p>
          <small><%= new Date(a.data_avaliacao).toLocaleDateString() %></small>
        </div>
      <% }) %>
    <% } else { %>
      <p style="color:#700a32;">Nenhuma avaliaÃ§Ã£o ainda. Seja o primeiro a avaliar!</p>
    <% } %>

    <form action="/loja/produtos/<%= produto.id %>/avaliar" method="POST" class="avaliar-form">
      <label for="nota">Sua nota:</label>
      <select name="nota" id="nota" required>
        <option value="">Selecione...</option>
        <option value="5">5 - Excelente</option>
        <option value="4">4 - Muito bom</option>
        <option value="3">3 - Bom</option>
        <option value="2">2 - Regular</option>
        <option value="1">1 - Ruim</option>
      </select>

      <label for="comentario">ComentÃ¡rio:</label>
      <textarea name="comentario" id="comentario" rows="3" placeholder="Escreva sua opiniÃ£o..." required></textarea>

      <button type="submit">Enviar AvaliaÃ§Ã£o</button>
    </form>
  </section>

  <%- include('../partials/footer') %>

  <!-- Atualiza preÃ§o ao trocar variaÃ§Ã£o -->
  <script>
    const selectVariacao = document.getElementById('variacao');
    const precoElement = document.getElementById('preco');
    const precoHidden = document.getElementById('precoSelecionado');

    if (selectVariacao) {
      selectVariacao.addEventListener('change', () => {
        const option = selectVariacao.selectedOptions[0];
        const preco = option.getAttribute('data-preco');
        precoElement.textContent = `R$ ${parseFloat(preco).toFixed(2)}`;
        precoHidden.value = preco;
      });
    }
  </script>
</body>
</html>
