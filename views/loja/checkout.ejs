<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Checkout</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <%- include('../partials/header') %>

  <main>
    <section class="checkout-container">
      <h1>Checkout</h1>

      <form action="/loja/checkout/finalizar" method="POST">
        <% if (carrinho && carrinho.length > 0) { %>
          <table class="tabela-padrao">
            <thead>
              <tr>
                <th>Produto</th>
                <th>Preço Unitário</th>
              </tr>
            </thead>
            <tbody>
              <% carrinho.forEach(item => { %>
                <tr>
                  <td>
                    <div class="produto-info">
                      <% 
                        let imgPath;
                        if (item.imagem) {
                          const im = String(item.imagem);
                          if (/^https?:\/\//i.test(im)) imgPath = im;
                          else if (im.startsWith('/')) imgPath = im;
                          else if (im.startsWith('uploads/')) imgPath = '/' + im;
                          else imgPath = '/uploads/' + im;
                        } else {
                          imgPath = '/imagens/image.png';
                        }
                      %>
                      <img src="<%= imgPath %>" alt="<%= item.nome %>" />
                      <span><%= item.nome %></span>
                    </div>
                  </td>
                  <td class="preco">
                    R$ <%= item.preco_unitario && !isNaN(item.preco_unitario) ? Number(item.preco_unitario).toFixed(2) : "0.00" %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>

          <div style="text-align:right;">
            <p class="total-container">
              Total: R$ <%= total && !isNaN(total) ? Number(total).toFixed(2) : "0.00" %>
            </p>
          </div>

          <div class="formas-pagamento">
            <p>Escolha a forma de pagamento:</p>
            <div class="formas-opcoes">
              <% formasPagamento.forEach(fp => { %>
                <label>
                  <input type="radio" name="forma_pagamento_id" value="<%= fp.id %>" required>
                  <%= fp.descricao %>
                </label>
              <% }) %>
            </div>
          </div>

          <button type="submit" class="btn-finalizar">Finalizar Pedido ➜</button>
        <% } else { %>
          <p style="text-align:center; color:#700a32; font-weight:600; margin-top:40px;">
            Seu carrinho está vazio. <a href="/loja">Voltar para a loja</a>
          </p>
        <% } %>
      </form>
    </section>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
