<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Checkout</title>
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    .checkout-container {
      max-width: 900px;
      margin: 60px auto;
      background: #fff0f6;
      padding: 40px;
      border-radius: 25px;
      box-shadow: 0 8px 25px rgba(233,158,185,0.5);
    }

    h1 {
      color: #d9155c;
      font-size: 28px;
      margin-bottom: 25px;
      text-align: center;
      font-weight: bold;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 25px;
      background: #fffafc;
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 4px 12px rgba(233,158,185,0.3);
    }

    th, td {
      padding: 14px 12px;
      text-align: left;
    }

    th {
      background-color: #f48bae; 
      color: #700a32; 
      font-weight: 700;
      text-transform: uppercase;
    }

    td {
      background-color: #fff0f6;
    }

    tr:nth-child(even) td {
      background-color: #ffe6f0;
    }

    tr:hover td {
      background-color: #fddde9;
      transition: 0.2s;
    }

    td img {
      width: 60px;
      height: 60px;
      object-fit: cover;
      border-radius: 10px;
      box-shadow: 0 3px 6px rgba(178,62,178,0.15);
    }

    .quantidade-input {
      width: 50px;
      text-align: center;
      border: 1px solid #e1c4e9;
      border-radius: 10px;
      padding: 4px;
      font-weight: 600;
      background: #fff;
    }

    .total-container {
      text-align: right;
      margin-top: 25px;
      font-size: 1.2rem;
      color: #d9155c;
      font-weight: 700;
    }

    .formas-pagamento {
      margin-top: 30px;
    }

    .formas-pagamento label {
      display: flex;
      align-items: center;
      background: #fffafc;
      border: 2px solid #f48bae;
      padding: 12px 20px;
      border-radius: 20px;
      margin-bottom: 12px;
      cursor: pointer;
      transition: 0.3s;
      font-weight: 600;
      color: #700a32;
    }

    .formas-pagamento input[type="radio"] {
      margin-right: 15px;
      accent-color: #d9155c;
    }

    .formas-pagamento label:hover {
      background: #ffe6f0;
      border-color: #d9155c;
    }

    .btn-finalizar {
      display: block;
      margin: 30px auto 0 auto;
      background: linear-gradient(135deg, #d9155c, #f48bae);
      color: #fff;
      border: none;
      border-radius: 25px;
      padding: 12px 30px;
      font-weight: bold;
      font-size: 16px;
      cursor: pointer;
      transition: 0.3s ease;
    }

    .btn-finalizar:hover {
      background: linear-gradient(135deg, #f48bae, #ffe6f0);
      color: #700a32;
    }

  </style>
</head>
<body>
  <%- include('../partials/header') %>

  <main>
    <section class="checkout-container">
      <h1>Checkout</h1>

      <form action="/loja/checkout/finalizar" method="POST">

        <% if (carrinho && carrinho.length > 0) { %>
          <table>
            <thead>
              <tr>
                <th>Produto</th>
                <th>Quantidade</th>
                <th>Preço Unitário</th>
                <th>Subtotal</th>
              </tr>
            </thead>
            <tbody>
              <% carrinho.forEach(item => { %>
                <tr>
                  <td>
                    <img src="<%= item.imagem %>" alt="<%= item.nome %>" />
                    <span><%= item.nome %></span>
                  </td>
                  <td>
                    <input type="number" name="quantidade_<%= item.id %>" class="quantidade-input" value="<%= item.quantidade %>" min="1">
                  </td>
                  <td>R$ <%= Number(item.preco).toFixed(2) %></td>
                  <td>R$ <%= (Number(item.preco) * item.quantidade).toFixed(2) %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>

          <p class="total-container">Total: R$ <%= Number(total).toFixed(2) %></p>

          <div class="formas-pagamento">
            <p><strong>Escolha a forma de pagamento:</strong></p>
            <% formasPagamento.forEach(fp => { %>
              <label>
                <input type="radio" name="forma_pagamento_id" value="<%= fp.id %>">
                <%= fp.descricao %>
              </label>
            <% }) %>
          </div>

          <button type="submit" class="btn-finalizar">Finalizar Pedido ➜</button>
        <% } else { %>
          <p>Seu carrinho está vazio. <a href="/loja">Voltar para a loja</a></p>
        <% } %>

      </form>
    </section>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
