<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Carrinho</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <%- include('../partials/header') %>

  <main class="container">
    <h1 class="page-title">ðŸ›’ Seu Carrinho</h1>

    <% if (!carrinho || carrinho.length === 0) { %>
      <p class="mensagem-vazia">Seu carrinho estÃ¡ vazio.</p>
      <div class="acoes-centrais">
        <a href="/loja" class="btn">Voltar para a Loja</a>
      </div>
    <% } else { %>
      <div class="produtos-lista">
        <% let total = 0; %>
        <% carrinho.forEach(p => { 
             let subtotal = p.preco * p.quantidade;
             total += subtotal;
        %>
          <div class="produto-card">
            <img src="/imagens/<%= p.imagem %>" alt="<%= p.nome %>" class="produto-img" />
            <div class="produto-info">
              <h3><%= p.nome %></h3>
              <p>Qtd: <%= p.quantidade %></p>
              <p><strong>Subtotal:</strong> R$ <%= subtotal.toFixed(2) %></p>

              <!-- Atualizar quantidade -->
              <form action="/loja/carrinho/atualizar" method="POST" class="form-inline">
                <input type="hidden" name="produtoId" value="<%= p.produtoId %>">
                <input type="number" name="quantidade" value="<%= p.quantidade %>" min="1" class="input-qtd">
                <button type="submit" class="btn btn-small">Atualizar</button>
              </form>

              <!-- Remover produto -->
              <form action="/loja/carrinho/remover" method="POST" class="form-inline">
                <input type="hidden" name="produtoId" value="<%= p.produtoId %>">
                <button type="submit" class="btn btn-danger btn-small">Remover</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- Total geral -->
      <h3 class="total-geral">Total: R$ <%= total.toFixed(2) %></h3>

      <!-- Finalizar pedido -->
      <div class="acoes-centrais">
        <a href="/loja/checkout" class="btn btn-success">Finalizar Pedido</a>
        <a href="/loja" class="btn">Continuar Comprando</a>
      </div>
    <% } %>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
