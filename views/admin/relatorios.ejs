<%- include('../partials/adminHeader', { titulo: 'Relatórios' }) %>

<h1>Relatórios</h1>

<section>
  <h2>Total de Vendas por Dia</h2>
  <table class="tabela-admin">
    <thead>
      <tr>
        <th>Data</th>
        <th>Total Vendas</th>
      </tr>
    </thead>
    <tbody>
      <% vendas.forEach(v => { %>
        <tr>
          <td><%= new Date(v.data).toLocaleDateString() %></td>
          <td>R$ <%= Number(v.total_vendas).toFixed(2) %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>

<section>
  <h2>Pedidos por Status</h2>
  <table class="tabela-admin">
    <thead>
      <tr>
        <th>Status</th>
        <th>Total de Pedidos</th>
      </tr>
    </thead>
    <tbody>
      <% status.forEach(s => { %>
        <tr>
          <td><%= s.descricao %></td>
          <td><%= s.total %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>

<%- include('../partials/adminFooter') %>
