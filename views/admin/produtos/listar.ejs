<%- include('../../partials/navAdm') %>

<h1>Produtos</h1>

<form method="GET" action="/admin/produtos">
  <input type="text" name="busca" placeholder="Buscar produto" value="<%= termoBusca %>">
  <button type="submit">Buscar</button>
</form>

<a href="/admin/produtos/novo">Adicionar Produto</a>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Nome</th>
    <th>Preço</th>
    <th>Categoria</th>
    <th>Imagem</th>
    <th>Ações</th>
  </tr>
  <% produtos.forEach(produto => { %>
    <tr>
      <td><%= produto.id %></td>
      <td><%= produto.nome %></td>
      <td>R$ <%= produto.preco.toFixed(2) %></td>
      <td><%= produto.categoria_id %></td>
      <td>
        <% if(produto.imagem){ %>
          <img src="/imagens/<%= produto.imagem %>" width="50">
        <% } %>
      </td>
      <td>
        <a href="/admin/produtos/editar/<%= produto.id %>">Editar</a>
        <a href="/admin/produtos/excluir/<%= produto.id %>">Excluir</a>
      </td>
    </tr>
  <% }) %>
</table>
