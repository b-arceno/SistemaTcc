<%- include('../../partials/navAdm') %>

<h1>Editar Produto</h1>

<form method="POST" action="/admin/produtos/editar/<%= produto.id %>" enctype="multipart/form-data">
  <label>Nome:</label>
  <input type="text" name="nome" value="<%= produto.nome %>" required><br>

  <label>Descrição:</label>
  <textarea name="descricao"><%= produto.descricao %></textarea><br>

  <label>Preço:</label>
  <input type="number" step="0.01" name="preco" value="<%= produto.preco %>" required><br>

  <label>Categoria:</label>
  <select name="categoria_id" required>
    <% categorias.forEach(c => { %>
      <option value="<%= c.id %>" <%= produto.categoria_id === c.id ? 'selected' : '' %>><%= c.nome %></option>
    <% }) %>
  </select><br>

  <label>Imagem:</label>
  <input type="file" name="imagem"><br>
  <input type="hidden" name="imagemExistente" value="<%= produto.imagem %>">
  <% if(produto.imagem){ %>
    <img src="/imagens/<%= produto.imagem %>" width="50">
  <% } %>

  <button type="submit">Atualizar</button>
</form>
