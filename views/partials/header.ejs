<header class="navbar">
  <style>
    /* ================= HEADER ================= */
    .navbar {
      width: 100%;
      background: #ffc0cb;
      border-bottom: 2px solid #e35b8f; /* rosa intenso */
      box-shadow: 0 8px 25px rgba(233,158,185,0.3); /* sombra suave */
      position: sticky;
      top: 0;
      z-index: 100;
      backdrop-filter: blur(8px);
      font-family: 'Poppins', sans-serif;
    }

    .navbar-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 15px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 20px;
    }

    .logo {
      font-size: 1.8rem;
      color: #d9155c;
      font-weight: 700;
      text-decoration: none;
      transition: transform 0.3s;
    }

    .logo:hover {
      transform: scale(1.05);
      color: #e35b8f;
    }

    .nav-links {
      list-style: none;
      display: flex;
      gap: 25px;
      align-items: center;
    }

    .nav-links li a {
      color: #d9155c;
      font-weight: 500;
      font-size: 1rem;
      transition: color 0.3s, transform 0.3s;
    }

    .nav-links li a:hover {
      color: #e35b8f;
      transform: translateY(-2px);
    }

    /* ================= PERFIL / USUÁRIO ================= */
    .perfil-menu {
      display: flex;
      align-items: center;
      gap: 15px;
      position: relative;
    }

    .nav-user {
      color: #d9155c;
      font-weight: 500;
    }

    .perfil-foto {
      width: 38px;
      height: 38px;
      border-radius: 50%;
      object-fit: cover;
      cursor: pointer;
      border: 2px solid #e35b8f;
      transition: transform 0.3s;
    }

    .perfil-foto:hover {
      transform: scale(1.1);
    }

    .perfil-dropdown {
      position: absolute;
      top: 50px;
      right: 0;
      background: #fff0f6;
      border-radius: 20px;
      box-shadow: 0 8px 25px rgba(233,158,185,0.3);
      padding: 10px 0;
      list-style: none;
      display: none;
      flex-direction: column;
      min-width: 180px;
      z-index: 200;
    }

    .perfil-dropdown li {
      padding: 10px 20px;
    }

    .perfil-dropdown li a {
      color: #d9155c;
      font-weight: 500;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .perfil-dropdown li a:hover {
      color: #e35b8f;
    }

    .perfil-menu:hover .perfil-dropdown {
      display: flex;
      flex-direction: column;
    }

    /* ================= ÍCONES LOGIN/CARRINHO ================= */
    .nav-icon {
      color: #d9155c;
      font-size: 1.3rem;
      margin-left: 10px;
      transition: transform 0.3s;
    }

    .nav-icon:hover {
      transform: scale(1.1);
      color: #e35b8f;
    }

    /* ================= RESPONSIVO ================= */
    @media (max-width: 900px) {
      .navbar-container {
        flex-direction: column;
        gap: 15px;
      }

      .nav-links {
        flex-wrap: wrap;
        justify-content: center;
        gap: 15px;
      }

      .perfil-dropdown {
        right: 10px;
      }
    }
  </style>

  <div class="navbar-container">
    <!-- Logo -->
    <a href="/loja" class="logo">Lu Doces</a>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Navegação principal -->
    <nav>
      <ul class="nav-links">
        <li><a href="/loja">Home</a></li>
        <li><a href="/loja/produtos">Produtos</a></li>
        <li><a href="/loja/categorias">Categorias</a></li>

        <% if (usuario && usuario.tipo_usuario_id === 1) { %>
          <li><a href="/admin">Admin</a></li>
        <% } %>
      </ul>
    </nav>

    <!-- Menu do perfil / usuário -->
    <div class="perfil-menu">
      <% if (usuario) { %>
        <span class="nav-user">Olá, <%= usuario.nome %></span>
        <img src="/imagens/image.png" alt="Perfil" class="perfil-foto" />
        <ul class="perfil-dropdown">
          <li><a href="/loja/perfil"><i class="fa-solid fa-user"></i> Meu Perfil</a></li>
          <li><a href="/loja/pedidos"><i class="fa-solid fa-box"></i> Meus Pedidos</a></li>
          <li><a href="/loja/carrinho"><i class="fa-solid fa-cart-shopping"></i> Meu Carrinho</a></li>
          <li><a href="/logout"><i class="fa-solid fa-right-from-bracket"></i> Sair</a></li>
        </ul>
      <% } else { %>
        <a href="/login" class="nav-icon" title="Login">
          <i class="fa-solid fa-user"></i>
        </a>
        <a href="/loja/carrinho" class="nav-icon" title="Carrinho">
          <i class="fa-solid fa-bag-shopping"></i>
        </a>
      <% } %>
    </div>
  </div>
</header>
